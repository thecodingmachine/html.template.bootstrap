{% if not this.allWidth %}
<div class="container">
{% endif %}
	<nav class="navbar navbar-expand-lg navbar-{{ this.mode }} bg-{{ this.background }}" {% if this.allWidth %}navbar-static-top{% endif %} {{ this.fixed?('fixed-'~this.fixed):'' }}" role="navigation">
		{% if this.allWidth %}
			<div class="container">
		{% endif %}
		{% if this.title %}
			<a class="navbar-brand" href="{{constant('ROOT_URL')}}{{ this.titleLink|raw }}">{{ this.title|raw }}</a>
		{% endif %}
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse navbar-ex1-collapse">
			{% for child in this.children %}
				{{ toHtml(child) }}
			{% endfor %}
		</div>
		{% if this.allWidth %}
			</div>
		{% endif %}
	</nav>
{% if not this.allWidth %}
</div>
{% endif %}
