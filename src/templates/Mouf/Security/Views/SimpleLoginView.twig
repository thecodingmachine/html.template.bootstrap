<style type="text/css">
    body {
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 60px auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .form-signin .form-signin-heading,
    .form-signin .checkbox {
        margin-bottom: 10px;
    }
    .form-signin input[type="text"],
    .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }

</style>

{# Note: the {{ this.loginActionUrl ? this.loginActionUrl : "login" }} part is to allow working with old and new versions of the SimpleLoginView #}
<form class="form-signin" action='{{ this.loginActionUrl ? this.loginActionUrl : "login" }}'  method='post'>
    <input type='hidden' name='redirect' value='{{ this.redirecturl }}' />
    <h2 class="form-signin-heading">Please sign in</h2>

    {% if displayBadCredentialsMessage  %}
        <div class="alert alert-danger">{{ badCredentialsMessage }}</div>
    {% endif %}
    <div {% if displayBadCredentialsMessage %}class="has-error"{% endif %}>
        <input name="login" type="text" class="input-block-level form-control" placeholder="{{ this.loginLabel }}" value="{{ this.login }}">
        <input name="password" type="password" class="input-block-level form-control" placeholder="{{ this.passwordLabel }}">
    </div>
    <div>
        <button class="btn btn-large btn-primary btn-block" type="submit">{{ this.loginSubmitLabel }}</button>
    </div>
    {% if this.forgotYourPasswordUrl %}
        <br/><a href="{{ constant('ROOT_URL')~this.forgotYourPasswordUrl }}" >{{ this.forgotYourPasswordLabel }}</a>
    {% endif %}
</form>
